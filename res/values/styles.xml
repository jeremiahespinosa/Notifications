<resources>

   <style name="Theme.Notifications" parent="@android:style/Theme.Holo">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_notifications</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Notifications</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Notifications</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Notifications</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Notifications</item>
        <item name="android:actionBarStyle">@style/ActionBar.Transparent.Notifications</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_notifications</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_notifications</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Notifications</item>
        
        
    </style>

    <style name="ActionBar.Solid.Notifications" parent="@android:style/Widget.Holo.ActionBar.Solid">
        <item name="android:background">@drawable/ab_solid_notifications</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_notifications</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_notifications</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Notifications</item>
    </style>

    <style name="ActionBar.Transparent.Notifications" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@drawable/ab_transparent_notifications</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Notifications</item>
    </style>

    <style name="PopupMenu.Notifications" parent="@android:style/Widget.Holo.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_notifications</item>	
    </style>

    <style name="DropDownListView.Notifications" parent="@android:style/Widget.Holo.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_notifications</item>
    </style>

    <style name="ActionBarTabStyle.Notifications" parent="@android:style/Widget.Holo.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_notifications</item>
    </style>

    <style name="DropDownNav.Notifications" parent="@android:style/Widget.Holo.Spinner">
        <item name="android:background">@drawable/spinner_background_ab_notifications</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_notifications</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_notifications</item>
    </style>
    
    <style name="ProgressBar.Notifications" parent="@android:style/Widget.Holo.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_notifications</item>
    </style>
    
    <style name="ActionButton.CloseMode.Notifications" parent="@android:style/Widget.Holo.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_notifications</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Notifications.Widget" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/PopupMenu.Notifications</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Notifications</item>
    </style>

</resources>